   ],
   "source": [
    "# Fetching the network\n",
    "f = wget.download('http://www.bnlearn.com/bnrepository/asia/asia.bif.gz')",  
    "with gzip.open('asia.bif.gz', mode='rb') as f:"
     "file_content=f.read()"
    "with open('asia.bif', mode='wb') as f"
     "f.write(file_content)"
    
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "metadata": {
    "collapsed": false
   },
   "outputs": [],
   "source": [
    "from pgmpy.readwrite import BIFReader\n",
    "reader = BIFReader('asia.bif')\n",
    "!rm asia.bif\n",
    "asia_model = reader.get_model()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {
    "collapsed": false
   },
   "outputs": [
    {
